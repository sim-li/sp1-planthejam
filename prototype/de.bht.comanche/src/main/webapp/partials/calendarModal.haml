%script{:id => "calendarModalContent.html", :type => "text/ng-template"}
  .modal-header
    %h3.modal-title
      %span.glyphicon.glyphicon-user
      Edit calendar - {{ text }}
  .modal-body
    .row
      .col-md-6
        .btn-group
          %button.btn.btn-default{:type => "button", "ng-click" => ""}
            %span.glyphicon.glyphicon-plus
            Add
    .row
      %ptj-calendar{"allowed" => "possibleTimePeriods", "resulting" => "resultingTimePeriods"}
  .modal-footer
    %button.btn.btn-warning{"ng-click" => "cancel()"} Cancel
    %button.btn.btn-primary{"ng-click" => "ok()"} OK

.input-group
  %input.btn.btn-primary{:type => "button", "ng-click" => "openCalendarModal()", :value => "Edit calendar"}/
/---- debugging
%span{} resulting: {{ resultingTimePeriods }}
