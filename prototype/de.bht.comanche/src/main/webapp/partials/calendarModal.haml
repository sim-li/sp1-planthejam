%script{:id => "calendarModalContent.html", :type => "text/ng-template"}
  .modal-header
    %h3.modal-title
      %span.glyphicon.glyphicon-user
      Edit calendar
  .modal-body
    .row
      .col-md-6
        .btn-group
          %button.btn.btn-default{:type => "button", "ng-click" => ""}
            %span.glyphicon.glyphicon-plus
            Add
    .row
      %ptj-calendar
  .modal-footer
    %button.btn.btn-primary{"ng-click" => "ok()"} OK
    %button.btn.btn-warning{"ng-click" => "cancel()"} Cancel

.input-group
  %input.btn.btn-primary{:type => "button", "ng-click" => "openCalendarModal()", :value => "Open calendar"}/
%div{} {{ selected }}
