    .col-md-2
      %ptj-survey-select
    .col-md-8
      .row
        .col-md-8
          %h2
            .item-wrapper
              %a{"editable-text" => "surveyTitle", :href => "#"}
                {{surveyTitle}}
        .col-md-4
          .row
            .btn-group.pull-right
              %label.btn.btn-primary{"btn-radio" => "'Once'", "ng-model" => "radioModel"} Once
