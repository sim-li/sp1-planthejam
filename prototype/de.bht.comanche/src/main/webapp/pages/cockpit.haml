.container
  %ptj-menu

  .container
    .panel.panel-default
      .panel-body
        %span
          %input#addSurvey.btn.btn-primary{"ng-click" => "addInvite()", :type => "button", :value => "Neue Terminumfrage erstellen"}
          %select#surveyList{"ng-model" => "session.selectedInvite", "ng-options" => "invite.survey.name for invite in session.user.invites | filter:session.user.searchString"}
          %input#filter.form-control{"ng-change" => "updateSelection()", "ng-keyup" => "$log.log('searchString: \\'' + session.user.searchString + '\\'')", "ng-model" => "session.user.searchString", :placeholder => "Terminumfragen durchsuchen ...", :type => "search"}
          %input#editInvite.btn.btn-primary{"ng-click" => "editInvite()", :type => "button", :value => "Terminumfrage anzeigen und bearbeiten"}
          %input#deleteInvite.btn.btn-primary{"ng-click" => "deleteSelectedInvite()", :type => "button", :value => "Terminumfrage lÃ¶schen"}
        .list-group
          %a.list-group-item{"href" => "", "ng-repeat" => "invite in session.user.invites | filter:session.user.searchString"} {{invite.survey.name}}
        .panel.panel-default
          .panel-body
            %label{:for => "selectedSurveyDescription"} Beschreibung:
            %div#selectedSurveyDescription{} {{ session.selectedInvite.survey.description }}
            %label{:for => "selectedSurveyDescription"} Deadline:
            %div#selectedSurveyDescription{} {{ session.selectedInvite.survey.deadline }}