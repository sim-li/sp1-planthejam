%ptj-menu
.container
  .col-lg-8
    .form-group
      %label{:for => "inputName"} User name
      .item-wrapper
        %a#inputName{"editable-text" => "user.name", :href => "#"}
          {{user.name}}
    .form-group
      %label{:for => "inputPassword"} Password
      %input#inputPassword.form-control.col-lg-3{"ng-model" => "user.password", :placeholder => "8-20 letters", :required => "", :type => "password"}
    / %input#toggleShowPassword{"ng-checked" => "false", "ng-model" => "session.showPassword", :type => "checkbox"}/
    / %label{:for => "toggleShowPassword"} Plain text
    .form-group
      %label{:for => "inputEmail"} E-Mail
      .item-wrapper
        %a#inputEmail{"editable-text" => "user.email", :href => "#"}
          {{user.email}}
    .error
    .form-group
      %label{:for => "inputTel"} Telephone
      .item-wrapper
        %input#inputTel.form-control.col-lg-3{"ng-model" => "user.tel", :placeholder => "Your phone number"}
        / %a#inputTel{"editable-text" => "user.tel", :href => "#"}
        /   {{user.tel}}
      .error
    %span
      %input#cancelUserEditBtn.btn.btn-primary{"ng-click" => "cancelEditUser()", :type => "button", :value => "Cancel"}/
      %input#saveUserEditBtn.btn.btn-primary{"ng-click" => "saveEditedUser()", :type => "submit", :value => "Save changes"}/
      %input#deleteUserBtn.btn.btn-primary{"ng-click" => "deleteUser()", :type => "button", :value => "Delete account"}/