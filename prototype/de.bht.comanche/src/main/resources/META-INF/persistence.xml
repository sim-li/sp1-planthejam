<persistence
  xmlns="http://java.sun.com/xml/ns/persistence"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
  version="1.0">

	<persistence-unit name="planthejam.jpa">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>de.bht.comanche.logic.LgGroup</class>
		<class>de.bht.comanche.logic.LgTimePeriod</class>
		<class>de.bht.comanche.logic.LgInvite</class>
		<class>de.bht.comanche.persistence.DaObject</class>
		<class>de.bht.comanche.logic.LgMember</class>
		<class>de.bht.comanche.logic.LgUser</class>
		<class>de.bht.comanche.logic.LgSurvey</class>
		
	 	<properties>
	 		<property name="hibernate.hbm2ddl.auto" value="update"/>
	 	</properties>
 	 </persistence-unit>

</persistence>
